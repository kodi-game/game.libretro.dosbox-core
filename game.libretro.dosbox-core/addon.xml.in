<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.dosbox-core"
		name="DOS (DOSBox-core)"
		version="4450.0.0.1"
		provider-name="DOSBox Team, radius, Nikos Chantziaras">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>exe|com|bat|conf|cue|iso|img</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">DOS (DOSBox-core) r4450 </summary>
		<description lang="en_GB">A DOSBox core for use in RetroArch and other libretro frontends.

Supported files: .exe, .com, .bat, .conf, .cue, .iso, .img</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.dosbox-core</source>
	</extension>
</addon>
